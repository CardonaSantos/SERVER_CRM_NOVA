  RecordatorioPago RecordatorioPago[]
  // estadoFacturaInternet StateFacturaInternet
}

enum StateFacturaInternet {
  PENDIENTE 
  PAGADA 
  VENCIDA 
  ANULADA 
  PARCIAL
}

model RecordatorioPago {
  id            Int       @id @default(autoincrement())
  clienteId     Int       // Relaci贸n con ClienteInternet
