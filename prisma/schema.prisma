model PagoFactura {
  id            Int       @id @default(autoincrement())
  
  facturaId     Int
  factura       Factura @relation(fields: [facturaId], references: [id], onDelete: Cascade)

  clienteId     Int
  cliente       ClienteInternet @relation(fields: [clienteId], references: [id], onDelete: Cascade)

