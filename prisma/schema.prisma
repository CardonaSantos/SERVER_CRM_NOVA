model ClienteServicio {
  //TABLA INTERMEDIA PARA SERVICIOS QUE NO SON WIFI
  id            Int       @id @default(autoincrement())
  
  clienteId     Int
  cliente       ClienteInternet @relation(fields: [clienteId], references: [id], onDelete: Cascade)
