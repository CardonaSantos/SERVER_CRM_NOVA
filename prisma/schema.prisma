  facturaInternet FacturaInternet @relation(fields: [facturaInternetId], references: [id], onDelete: Cascade)  // Factura correspondiente
}

enum  ResultadoRecordatorioPago {
  PENDIENTE
  PAGADO
  OTRO
}



